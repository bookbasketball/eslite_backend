<div class="box">
  <article class="media">
    <figure class="image">
      <% @product.images.each do |image| %>
        <div class="column">
          <%= image_tag image.variant(resize_to_limit: [500, 500]) %>
        </div>
        <%= link_to '刪除', destroy_image_admin_product_path(@product, image), method: :delete %>
      <% end %>
    </figure>
  </article>
</div>